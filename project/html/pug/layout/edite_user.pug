.edit_user
    .edite_header
        img(src="img/avatar.png", alt="avatar")
        .user_name
            h2 Rana AYDIN
            i.edite_icon.fa-solid.fa-user-pen 
    .form_body
        form(action="#") 
            .form_field
                label(for="fname") First Name
                input(type="text", name="fname" id="fname")
            .form_field
                label(for="lname") last Name
                input(type="text", name="" id="lname")
            .form_field
                label(for="email") Email
                input(type="email", name="" id="email")
            .form_field
                label(for="address") Primery Address
                input(type="address", name="" id="address")
            .form_field.left
                label(for="phone") Phone
                input(type="tel", name="" placeholder="(+90 *******)")
            .form_field.left
                label(for="dob") Date of Birth
                select(name="") 0
                    option(value="") day
                    each d in ["Sunday","Monday" ,"Tuesday" ,"Wednesday" , "Thursday","Friday" , "Saturday"]
                        option(value="")= d
                select(name="")
                    option(value="") month
                    each i in ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
                        option(value="")= i
                select(name="")
                    option(value="") year
                    - for (var i = 1930; i <= 2005; i++ )
                        option(value="") #{i}  
            .form_field.left
                label(for="Gender") Gender
                .gender_detils
                    span
                        label(for="m") Male
                        input(type="radio", name="gender" id="m")
                        
                    span
                        label(for="f") Female
                        input(type="radio", name="gender" id="f")
                        
            .form_field
                <input type="submit" value="Save Changes">