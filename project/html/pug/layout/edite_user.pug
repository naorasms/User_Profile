.edit_user
    .edite_header
        img(src="img/avatar.png", alt="avatar")
        .user_name
            h2 Rana AYDIN
            i.edite_icon.fa-solid.fa-user-pen 
    .form_body
        form(action="#") 
            .form_field
                label(for="fname") First Name
                input(type="text", name="fname" id="fname")
            .form_field
                label(for="lname") last Name
                input(type="text", name="" id="lname")
            .form_field
                label(for="email") Email
                input(type="email", name="" id="email")
            .form_field
                label(for="address") Primery Address
                input(type="address", name="" id="address")
            .form_field.left
                label(for="phone") Phone
                input(type="tel", name="" id="phone")
            .form_field.left
                label(for="dob") Date of Birth
                input(type="date", name="" id="dob")
            .form_field.left
                label(for="") Gender
                input(type="radio", name="m" id="m")
                |Male
                input(type="radio", name="f" id="f")
                |Female
            <input type="submit" value="Save Changes">